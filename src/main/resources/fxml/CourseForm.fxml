<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.student.app.controller.CourseFormController"
      stylesheets="@../styles/main.css"
      spacing="20" style="-fx-padding: 20; -fx-background-color: white;">

    <Label text="Course Details" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="15" vgap="15">
        <Label text="Course Code:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="codeField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Course Title:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="titleField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Credit Hours:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="creditHoursField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel" styleClass="button, button-danger"/>
        <Button text="Save" onAction="#handleSave" styleClass="button, button-success"/>
    </HBox>

</VBox>