<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.student.app.controller.LoginController"
      stylesheets="@../styles/main.css"
      alignment="CENTER" spacing="15" style="-fx-background-color: #ecf0f1; -fx-padding: 50;">

    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
        <Label text="Student Management System" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Label text="Login to your account" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>

        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Username"/>
            <TextField fx:id="usernameField" promptText="Enter username"/>
        </VBox>

        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Password"/>
            <PasswordField fx:id="passwordField" promptText="Enter password"/>
        </VBox>

        <Label fx:id="errorLabel" textFill="red"/>

        <Button text="Login" onAction="#handleLogin" styleClass="button" maxWidth="Infinity"/>
    </VBox>

</VBox>
